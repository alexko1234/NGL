package controllers.fr.cea.ig.play;

import javax.inject.Inject;
import javax.inject.Singleton;

import fr.cea.ig.play.NGLConfig;
import play.data.FormFactory;
import play.i18n.MessagesApi;

// Stupidest thing ever, this is needed because fr.cea.ig.play.NGLContext
// is correctly found when there is no package controllers.fr.cea.ig
// but not when said package exists...
// Creating the controllers.fr.ig.play package in the authentication lib
// triggered the problem.

@Singleton
public class NGLContext extends fr.cea.ig.play.NGLContext {

	@Inject
	public NGLContext(NGLConfig   config,
					  MessagesApi messagesApi,
			          FormFactory formFactory) {
		super(config,messagesApi,formFactory);
	}

}
