<?xml version="1.0" encoding="UTF-8"?>

<Specification xmlns="http://www.genoscope.cns.fr/specification"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.genoscope.cns.fr/specification
H:\birdsSpec.xsd">

	<!-- Treatment for file transfert -->
	<Treatment name="getCCRTFile" useJobScheduler="true"
		checkIfNewTreatmentAlreadyPerformed="true">

		<ExecutableSpecification
			commandSyntaxStrategyName="default">
			<Executable path="/env/cns/submit_traces/SRA/NGL_test/script/test.sh"
				user="cnsnglapps" host="etna2.genoscope.cns.fr" />
			<Slurm job="rsyncJob" part="normal" account="soumissions" />
		</ExecutableSpecification>

		<ParametersSpecification>
			<KeyValueElement key="-e"
				value="gsissh %userCCRT%@cobalt.ccc.cea.fr:%ccrtFileName%"
				parameterName="gsisshParam" />
			<LineElement line="-vptL" parameterName="rsyncParam" />
			<LineElement line="%filePath%" parameterName="endArg" />
		</ParametersSpecification>

		<InputsSpecification>
			<InputElement name="inputGetCCRT" count="1"
				resourceType="submissionCCRT">
				<Referential name="nglSubRef_processCCRT" />
			</InputElement>
		</InputsSpecification>
	</Treatment>

	<!-- Treatment : call NGL SUB services to create xml files to send to EBI -->
	<Treatment name="removeCCRTFile" useJobScheduler="false"
		checkIfNewTreatmentAlreadyPerformed="true">
		<ExecutableSpecification
			commandSyntaxStrategyName="default">
			<!-- TODO call REST API NGL-SUB -->
			<Executable path="/env/cns/submit_traces/SRA/NGL_test/script/test.sh" />
		</ExecutableSpecification>

		<ParametersSpecification>
			<KeyValueElement key="-f" value="%filePath%"
				parameterName="fileParam" />
		</ParametersSpecification>


		<InputsSpecification>
			<InputElement name="inputRmCCRT" count="1" resourceType="submissionCCRT">
				<Referential name="nglSubRef_processCCRT" />
			</InputElement>
		</InputsSpecification>
	</Treatment>


</Specification>
