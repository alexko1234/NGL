<?xml version="1.0" encoding="UTF-8"?>
	
<Specification xmlns="http://www.genoscope.cns.fr/specification"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.genoscope.cns.fr/specification
H:\birdsSpec.xsd">

	<!-- Group treatment for submission -->
	<Treatment name="WF_Release" checkIfNewTreatmentAlreadyPerformed="true" ruleFlowId="fr.cea.ig.auto.submission.WorkflowRelease">
		<ExecutableSpecification>
			<Executable />
		</ExecutableSpecification>
		<ParametersSpecification />
		<InputsSpecification>
			<InputElement name="releaseData" count="1" resourceType="submission">
				<Referential name="nglSubRef" />			
			</InputElement>
		</InputsSpecification>
	</Treatment>
	
	
	<!-- Treatment : call NGL SUB services to create xml files to send to EBI -->
	<Treatment name="createReleaseXML" useJobScheduler="false" checkIfNewTreatmentAlreadyPerformed="true">
		<ExecutableSpecification commandSyntaxStrategyName="createXMLSyntax">
			<!-- TODO call REST API NGL-SUB -->
			<Executable path="curl f -A bot -X PUT http://appprod.genoscope.cns.fr:9005/sra/submissions/%code%/xml"/>
		</ExecutableSpecification>
		
		<InputsSpecification>
			<InputElement name="releaseToXML" count="1" resourceType="submission">
				<Referential name="internalRefRelease"/>
			</InputElement>
		</InputsSpecification>
		<OutputsSpecification>
			<OutputElement name="outputReleaseXML" resourceType="releaseXML">
				<Referential name="internalRefReleaseXML" />
			</OutputElement>
		</OutputsSpecification>
	</Treatment>
	
	<!-- Treatment : call EBI services to send xml files -->
	<Treatment name="sendReleaseXML" useJobScheduler="false" checkIfNewTreatmentAlreadyPerformed="true">
		<ExecutableSpecification commandSyntaxStrategyName="sendXMLSyntax">
			<Executable path="curl -f https://www.ebi.ac.uk/ena/submit/drop-box/submit/?auth=ENA%20Webin-9%20Axqw16nI" />
		</ExecutableSpecification>
		<ParametersSpecification>
			<KeyValueElement key="-F" value="&quot;SUBMISSION=@%xmlSubmission%&quot;" parameterName="xmlSubmission"/>
			<LineElement line="-k" parameterName="optK" />
			<LineElement line="release_%submissionCode%_%submissionDate%.txt" parameterName="listAC"/>
			
		</ParametersSpecification>
		<InputsSpecification>
			<InputElement name="releaseToSend" count="1" resourceType="releaseXML">
				<Referential name="internalRefReleaseXML" />
			</InputElement>
		</InputsSpecification>
	</Treatment>
</Specification>
